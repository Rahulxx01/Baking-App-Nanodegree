<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    tools:context=".ui.RecipeStepDescriptionFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/playerView"
                android:layout_width="match_parent"
                android:layout_height="250dp" />


            <TextView
                android:id="@+id/stepDescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-smallcaps"
                android:padding="16dp"
                android:text="@string/hello_blank_fragment"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:textColor="@color/white" />


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/ingredientsCardSteps"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:elevation="100dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/ingredientsStepDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Ingredients:"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/ingredientsListStepDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="16dp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Ingredients"
                        android:textColor="@color/white"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />


                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/widgetButtonStepDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:layout_margin="@dimen/fab_margin"
                        app:srcCompat="@drawable/ic_widget_white" />



                </LinearLayout>


            </android.support.v7.widget.CardView>



        </LinearLayout>


    </ScrollView>


</FrameLayout>